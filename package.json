{
  "name": "simplymc",
  "version": "1.0.0",
  "description": "The official website for the minecraft multitool simplymc.art",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "build": "electron-builder -wl",
    "buildmac": "electron-builder -m"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AkiraDevelopment/SimplyMC.git"
  },
  "author": {
    "name": "AkiraDev",
    "email": "akira.devjs@gmail.com"
  },
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/AkiraDevelopment/SimplyMC/issues"
  },
  "homepage": "https://github.com/AkiraDevelopment/SimplyMC#readme",
  "build": {
    "appId": "xyz.akiradev.simplymc",
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "tar.gz"
      ],
      "category": "Utility",
      "icon": "./site/assets/images/icon_512x512.png.png"
    },
    "win": {
      "target": "NSIS",
      "icon": "./site/assets/images/icon_512x512.png.png",
      "publisherName": "AkiraDev"
    },
    "mac": {
      "target": "default",
      "category": "public.app-category.utilities",
      "icon": "./site/assets/images/icon_512x512.png.png"
    }
  },
  "dependencies": {
    "discord-rich-presence": "^0.0.8",
    "ejs": "^3.1.8",
    "ejs-electron": "^2.1.1",
    "electron-updater": "^5.2.1",
    "eslint": "^8.20.0",
    "express": "^4.18.1",
    "fs": "^0.0.1-security",
    "node-fetch": "^3.2.9",
    "pbf": "^3.2.1",
    "yaml": "^2.1.1"
  },
  "devDependencies": {
    "electron": "^20.1.1",
    "electron-builder": "^23.3.3"
  }
}
